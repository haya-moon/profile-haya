<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading-contact">Contact Me</h2>
        <%# <h3 class="section-subheading">Send me a message</h3> %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row justify-content-center">
          <div class="col-md-6 container-contact">
            <%= form_tag '/send_email' do %>
            <div class="form-group">
              <%= label_tag :email, 'Email' %>
              <%= text_field_tag 'email', '', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= label_tag :subject, 'Name' %>
              <%= text_field_tag 'subject', '', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= label_tag :body, 'Message' %>
              <%= text_area_tag 'body', '', class: 'form-control', rows: 5 %>
            </div>
            <%= submit_tag 'Submit', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>
</section>
